{
  "id": "rnn_basic",
  "name": "Basic RNN",
  "description": "Simple vanilla Recurrent Neural Network for sequence modeling. Best for short sequences; use LSTM/GRU for longer dependencies.",
  "category": "RNN",
  "tags": ["rnn", "recurrent", "sequence", "vanilla", "simple"],
  "parameters": [
    {
      "name": "hidden_size",
      "type": "int",
      "default_value": "64",
      "description": "Number of RNN hidden units",
      "min_value": "16",
      "max_value": "512"
    },
    {
      "name": "embedding_dim",
      "type": "int",
      "default_value": "64",
      "description": "Dimension of embedding vectors",
      "min_value": "16",
      "max_value": "256"
    },
    {
      "name": "vocab_size",
      "type": "int",
      "default_value": "5000",
      "description": "Size of vocabulary",
      "min_value": "100",
      "max_value": "50000"
    },
    {
      "name": "num_classes",
      "type": "int",
      "default_value": "2",
      "description": "Number of output classes",
      "min_value": "2",
      "max_value": "1000"
    },
    {
      "name": "activation",
      "type": "nodetype",
      "default_value": "Tanh",
      "description": "RNN activation function",
      "options": ["Tanh", "ReLU", "Sigmoid"]
    }
  ],
  "template": {
    "nodes": [
      {"id": "input", "type": "DatasetInput", "name": "Sequence Input", "pos": [0, 200]},
      {"id": "embed", "type": "Embedding", "name": "Embedding", "pos": [200, 200], "params": {"vocab_size": "$vocab_size", "embedding_dim": "$embedding_dim"}},
      {"id": "rnn1", "type": "RNN", "name": "RNN Layer 1", "pos": [400, 200], "params": {"units": "$hidden_size", "activation": "$activation", "return_sequences": "true"}},
      {"id": "rnn2", "type": "RNN", "name": "RNN Layer 2", "pos": [600, 200], "params": {"units": "$hidden_size", "activation": "$activation"}},
      {"id": "dense", "type": "Dense", "name": "Dense", "pos": [800, 200], "params": {"units": "32"}},
      {"id": "act", "type": "ReLU", "name": "ReLU", "pos": [1000, 200]},
      {"id": "output_layer", "type": "Dense", "name": "Output", "pos": [1200, 200], "params": {"units": "$num_classes"}},
      {"id": "softmax", "type": "Softmax", "name": "Softmax", "pos": [1400, 200]},
      {"id": "output", "type": "Output", "name": "Output", "pos": [1600, 200]}
    ],
    "links": [
      {"from": "input", "to": "embed"},
      {"from": "embed", "to": "rnn1"},
      {"from": "rnn1", "to": "rnn2"},
      {"from": "rnn2", "to": "dense"},
      {"from": "dense", "to": "act"},
      {"from": "act", "to": "output_layer"},
      {"from": "output_layer", "to": "softmax"},
      {"from": "softmax", "to": "output"}
    ]
  }
}
