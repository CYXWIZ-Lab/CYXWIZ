                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     3# MNIST Training Script for CyxWiz Engine
# This script trains an MLP classifier on the MNIST handwritten digit dataset
# Run this in the CyxWiz Engine Console (View > Console)

import pycyxwiz as cyx
from pycyxwiz import Sequential, Dense, Dropout, Activation
from pycyxwiz import Adam, CrossEntropyLoss
from pycyxwiz import DataRegistry

# =============================================================================
# Configuration
# =============================================================================
EPOCHS = 10
BATCH_SIZE = 64
LEARNING_RATE = 0.001
VALIDATION_SPLIT = 0.1
DROPOUT_RATE = 0.2

# =============================================================================
# Load MNIST Dataset
# =============================================================================
print("Loading MNIST dataset...")
train_data = DataRegistry.load("mnist", split="train")
test_data = DataRegistry.load("mnist", split="test")

print(f"Training samples: {len(train_data)}")
print(f"Test samples: {len(test_data)}")

# =============================================================================
# Build Model Architecture
# =============================================================================
# Architecture: Input[784] -> Dense(512) -> ReLU -> Dropout(0.2)
#                         -> Dense(256) -> ReLU -> Dropout(0.2)
#                         -> Dense(10) -> Softmax -> Output[10]

print("\nBuilding MLP model...")
model = Sequential([
    # First hidden layer
    Dense(784, 512),
    Activation("relu"),
    Dropout(DROPOUT_RATE),

    # Second hidden layer
    Dense(512, 256),
    Activation("relu"),
    Dropout(DROPOUT_RATE),

    # Output layer
    Dense(256, 10),
    Activation("softmax")
])

# Print model summary
print("\nModel Architecture:")
print("=" * 50)
print("Input:    [batch, 784]")
print("Dense:    784 -> 512 (ReLU, Dropout)")
print("Dense:    512 -> 256 (ReLU, Dropout)")
print("Dense:    256 -> 10 (Softmax)")
print("Output:   [batch, 10]")
print("=" * 50)

# Calculate total parameters
total_params = (784 * 512 + 512) + (512 * 256 + 256) + (256 * 10 + 10)
print(f"Total parameters: {total_params:,}")

# =============================================================================
# Compile Model
# =============================================================================
print("\nCompiling model...")
model.compile(
    optimizer=Adam(lr=LEARNING_RATE),
    loss=CrossEntropyLoss(),
    metrics=["accuracy"]
)

# =============================================================================
# Train Model
# =============================================================================
print("\nStarting training...")
print(f"Epochs: {EPOCHS}")
print(f"Batch size: {BATCH_SIZE}")
print(f"Learning rate: {LEARNING_RATE}")
print(f"Validation split: {VALIDATION_SPLIT}")
print("-" * 50)

history = model.fit(
    train_data,
    epochs=EPOCHS,
    batch_size=BATCH_SIZE,
    validation_split=VALIDATION_SPLIT,
    verbose=True
)

# =============================================================================
# Evaluate on Test Set
# =============================================================================
print("\n" + "=" * 50)
print("Evaluating on test set...")
test_loss, test_acc = model.evaluate(test_data)
print(f"Test Loss: {test_loss:.4f}")
print(f"Test Accuracy: {test_acc:.2%}")
print("=" * 50)

# =============================================================================
# Save Model (Optional)
# =============================================================================
# Uncomment to save the trained model
# model.save("mnist_model.cyxmodel")
# print("\nModel saved to mnist_model.cyxmodel")

# =============================================================================
# Training Summary
# =============================================================================
print("\nTraining complete!")
print(f"Final training accuracy: {history['accuracy'][-1]:.2%}")
print(f"Final validation accuracy: {history['val_accuracy'][-1]:.2%}")
print(f"Best validation accuracy: {max(history['val_accuracy']):.2%}")

